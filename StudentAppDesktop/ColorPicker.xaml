<Window x:Class="StudentAppDesktop.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:StudentAppDesktop"
        mc:Ignorable="d"
        Title="Color Pick" 
        Height="338" 
        Width="308"
        ResizeMode="NoResize">

    <Grid>
        <Grid Width="300" Height="280" VerticalAlignment="Top">
            <xctk:ColorCanvas x:Name="ColorChoose" SelectedColor="Black"/>
        </Grid>
        <Grid>
            <Button x:Name="OK" Content="OK" Height="29" Width="151" Margin="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="OK_Click"/>
            <Button x:Name="Cancel" Content="Cancel" Height="29" Width="151" Margin="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="Cancel_Click"/>
        </Grid>
    </Grid>
</Window>
