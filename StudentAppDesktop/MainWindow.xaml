<Window x:Class="StudentAppDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentAppDesktop"
        mc:Ignorable="d"
        Title="StudentDB" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="local:CustomCommands.ShowAbout" Executed="ShowAbout" />
        <CommandBinding Command="local:CustomCommands.ChooseFontColor" Executed="ChooseFontColor" />
    </Window.CommandBindings>
    <Window.Resources>
        <SolidColorBrush x:Key="fontColor" Color="Black"/>
        <FontStyle x:Key="fontStyle">Normal</FontStyle>
        <FontFamily x:Key="fontFamily">Calibri</FontFamily>
        <FontWeight x:Key="fontBold">Normal</FontWeight>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="File">
                <MenuItem Header="File Open"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Options">
                <MenuItem Header="Choose Font Color" Command="local:CustomCommands.ChooseFontColor"/>
                <MenuItem Header="Choose Font" Command="local:CustomCommands.ChooseFont"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" InputGestureText="F1" Command="local:CustomCommands.ShowAbout"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" Text="First Name" Margin="20 0" Foreground="{DynamicResource fontColor}" />
            <TextBox Grid.Row="2" Height="20" Margin="20 0"/>

            <TextBlock Grid.Row="4" Text="Students List" Margin="20 0" Foreground="{DynamicResource fontColor}"/>
            <ListBox Grid.Row="5" Margin="20 0" ScrollViewer.VerticalScrollBarVisibility="Visible">
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
                <ListBoxItem>tes</ListBoxItem>
            </ListBox>
        </Grid>

        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Choosen Student" Foreground="{DynamicResource fontColor}"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Button Foreground="{DynamicResource fontColor}" Grid.Column="0" Grid.Row="0" Margin="10">Add Student...</Button>
                <Button Foreground="{DynamicResource fontColor}" Grid.Column="1" Grid.Row="0" Margin="10">Delete Current Student</Button>
                <Button Foreground="{DynamicResource fontColor}" Grid.Column="0" Grid.Row="1" Margin="10">Delete All Students</Button>
                <Button Foreground="{DynamicResource fontColor}" Grid.Column="1" Grid.Row="1" Margin="10">Modify Student Info</Button>

                <Button Foreground="{DynamicResource fontColor}" Grid.Column="1" Grid.Row="2" Margin="10" Click="Close">Exit</Button>

            </Grid>
        </Grid>

    </Grid>
</Window>
